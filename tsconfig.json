{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "module": "CommonJS",
    "target": "ES5",
    "importHelpers": true,
    "lib": ["ES5", "ES6"],
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
